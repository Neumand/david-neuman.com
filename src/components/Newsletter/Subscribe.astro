---
const emailValidationPattern =
  "/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/";
---

<div
  id='revue-embed'
  class='flex flex-col text-center max-w-3xl rounded p-8 space-y-4 justify-center items-center m-auto bg-cool-gray-100 dark:bg-gray-800'
>
  <header class='text-4xl font-header'>Subscribe to Dave's Dives</header>
  <span
    >Sign up to receive curated articles on web development, creativity, and
    living more purposefully.
  </span>
  <form
    action='https://www.getrevue.co/profile/davidmneuman/add_subscriber'
    method='post'
    id='revue-form'
    name='revue-form'
    target='_blank'
    class='flex flex-col justify-center items-center space-y-3 md:flex-row md:space-x-4 md:space-y-0'
  >
    <label hidden for='member_email'>Email address</label>
    <input
      class='p-2 border border-blue-100 outline-none rounded-sm dark:bg-cool-gray-900 dark:border-gray-900'
      placeholder='Your email address...'
      type='email'
      name='member[email]'
      id='member_email'
      required
      pattern={emailValidationPattern}
    />
    <div class='revue-form-actions'>
      <button
        type='submit'
        class='flex items-center justify-center w-28 font-bold bg-cool-gray-800 text-white rounded-full py-2 px-4 self-center focus:outline-none dark:bg-blue-900'
        id='member_submit'
      >
        Subscribe
      </button>
    </div>
  </form>
  <div class='revue-form-footer'>
    By subscribing, you agree with Revueâ€™s <a
      target='_blank'
      href='https://www.getrevue.co/terms'
      class='link'
      >Terms of Service
    </a> and <a
      target='_blank'
      href='https://www.getrevue.co/privacy'
      class='link'
      >Privacy Policy
    </a>
  </div>
</div>
