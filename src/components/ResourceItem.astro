---
import Image from 'astro/components/Image.astro';

interface Props {
  title: string;
  linkUrl: string;
  imageUrl?: string;
}

const { imageUrl, linkUrl, title } = Astro.props as Props;
---

<a
  href={linkUrl}
  class='flex flex-col justify-center cursor-pointer w-full h-28 rounded p-4 border border-solid border-zinc-200 dark:border-zinc-800 hover:bg-zinc-200/80 hover:shadow dark:hover:bg-zinc-800/80'
  target={linkUrl.includes('http') ? '_blank' : '_self'}
>
  <div class='flex gap-2'>
    {
      imageUrl && (
        <Image
          class='rounded-full inline-block h-5 w-5 mr-2'
          src={imageUrl}
          format={'webp'}
          width={20}
          height={20}
          alt={title}
        />
      )
    }
    <div>{title}</div>
  </div>
</a>
